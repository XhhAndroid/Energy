<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/luckColorLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="160dp"
        android:orientation="vertical"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/color_base_dialog_red">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/constellationImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@null"
                android:background="@mipmap/update_head_icon"/>
            <TextView
                android:id="@+id/constellation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|top"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/healthNum"
                style="@style/centerTextView"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:text=":"/>
            <TextView
                android:id="@+id/loveNum"
                style="@style/centerTextView"
                android:layout_weight="1"
                android:text=":"/>
            <TextView
                android:id="@+id/businessNum"
                style="@style/centerTextView"
                android:layout_weight="1"
                android:text=":"/>
            <TextView
                android:id="@+id/financeNum"
                style="@style/centerTextView"
                android:layout_weight="1"
                android:text=":"/>
        </LinearLayout>
        <TextView
            android:id="@+id/luckNum"
            style="@style/centerTextView"
            android:text=":"/>
        <TextView
            android:id="@+id/tip"
            style="@style/centerTextView"
            android:text=""/>
    </LinearLayout>
</LinearLayout>