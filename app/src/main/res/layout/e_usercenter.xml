<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mtext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:id="@+id/reputation"
            style="@style/tvsetting"
            android:background="@drawable/them_tvbutton_bg"
            android:text="我的信用" />
        <com.zxh.q.zlibrary.widget.ZEditText
            android:id="@+id/zedittext"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableRight="@mipmap/delete"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:textCursorDrawable="@color/theme_color"
            mtext:mPaddingleft="5dp"/>
    </LinearLayout>
</LinearLayout>