<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="#40e1e1e1"
                android:centerY="0.75"
                android:endColor="#80e1e1e1"
                android:startColor="#ffe1e1e1" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="#40e1e1e1"
                    android:centerY="0.75"
                    android:endColor="#80e1e1e1"
                    android:startColor="#ffe1e1e1" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="#e74b4c"
                    android:centerY="0.75"
                    android:endColor="#e74b4c"
                    android:startColor="#e74b4c" />
            </shape>
        </clip>
    </item>
</layer-list>