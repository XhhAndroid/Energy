<resources>
    <style name="ActionBarBaseStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:icon">@android:color/transparent</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="titleMargins">0dp</item>
        <item name="android:background">#ffffff</item>
    </style>
    <style name="CustomActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/CustmActionBarStyle</item>
    </style>
    <style name="CustmActionBarStyle" parent="android:Widget.ActionBar">
        <item name="android:background">@color/white</item>
    </style>
    <style name="CustomBaseDialogItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minHeight">40.0dip</item>
    </style>
    <!-- 提示框样式设置 -->
    <style name="CustomBaseDialogButton">
        <item name="android:background">@drawable/vsep_base_dialog</item>
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#4faff3</item>
        <item name="android:minHeight">40.0dip</item>
    </style>
</resources>
